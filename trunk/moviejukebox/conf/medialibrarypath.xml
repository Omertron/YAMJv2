<?xml version="1.0" encoding="utf-8"?>

<!--                                                                                   -->
<!-- Libraries element contains all your media directories and their paths.            -->
<!-- Both local and nmt path are specified here.                                       -->
<!--                                                                                   -->
<!-- path element contains local path                                                  -->
<!-- nmtpath element contains nmtpath                                                  -->
<!-- exclude element contains a file exclusion filter for the library                  -->
<!--                                                                                   -->

<libraries>
  <library>
      <path>/media/HD1/Movies/</path>
      <nmtpath>file:///opt/sybhttpd/localhost.drives/USB_DRIVE_A-1/Movies/</nmtpath>
      <excludes name="sample,tmp/,temp/" />
  </library>

  <library>
      <path>/media/HD1/TV/</path>
      <nmtpath>file:///opt/sybhttpd/localhost.drives/USB_DRIVE_A-1/TV/</nmtpath>
      <excludes name="sample,tmp/,temp/" />
  </library>

  <library>
      <path>/media/HD1/Misc/</path>
      <nmtpath>file:///opt/sybhttpd/localhost.drives/USB_DRIVE_A-1/Misc/</nmtpath>
      <excludes name="sample,tmp/,temp/" />
  </library>
</libraries>
